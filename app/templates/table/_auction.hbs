<div class="col-md-4">
  <table class="auction table table-bordered table-condensed">
    <tr>
      {{#with controllers.summary}}
        <th {{bind-attr class="isNSvulnerable:vulnerable:not-vulnerable"}}>N</th>
        <th {{bind-attr class="isEWvulnerable:vulnerable:not-vulnerable"}}>E</th>
        <th {{bind-attr class="isNSvulnerable:vulnerable:not-vulnerable"}}>S</th>
        <th {{bind-attr class="isEWvulnerable:vulnerable:not-vulnerable"}}>W</th>
      {{/with}}
    </tr>
    {{#each row in controllers.auction.rows}}
      <tr>
        {{view Bridge.BidView bidBinding=row.n}}
        {{view Bridge.BidView bidBinding=row.e}}
        {{view Bridge.BidView bidBinding=row.s}}
        {{view Bridge.BidView bidBinding=row.w}}
      </tr>
    {{/each}}
  </table>
</div>
